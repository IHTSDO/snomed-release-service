<?xml version="1.0" encoding="UTF-8"?>
<beans:beans
      xmlns="http://www.springframework.org/schema/security"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xmlns:beans="http://www.springframework.org/schema/beans"
      xmlns:context="http://www.springframework.org/schema/context"
      xsi:schemaLocation="http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-3.2.xsd
 	http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

   <context:property-placeholder location="file:${srsConfigLocation:/tmp}/api.properties" order="-1"/>

   <global-method-security pre-post-annotations="enabled" secured-annotations="enabled" proxy-target-class="true">
      <expression-handler ref="expressionHandler"/>
   </global-method-security>

   <http pattern="/**/api-doc.html" security="none"/>
   <http pattern="/**/api-docs/**" security="none"/>
   <http pattern="/**/static/**" security="none"/>
   <http pattern="/**/webjars/**" security="none"/>

   <beans:bean id="expressionHandler" class="org.springframework.security.access.expression.method.DefaultMethodSecurityExpressionHandler">
      <beans:property name="permissionEvaluator" ref="methodSecurityConfig"/>
   </beans:bean>
   <beans:bean id="methodSecurityConfig" class="org.ihtsdo.buildcloud.config.MethodSecurityConfig" />

   <beans:bean id="http403EntryPoint" class="org.springframework.security.web.authentication.Http403ForbiddenEntryPoint" />
</beans:beans>